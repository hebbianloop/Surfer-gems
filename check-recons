	[ -z ${SUBJECTS} ] && SUBJECTS=("${RUNNINGSUBJECTS[@]}" "${FINISHEDSUBJECTS[@]}" "${FAILEDSUBJECTS[@]}")
	[ -z ${REPORTDIR} ] && REPORTDIR=${HOME}/FreeSurfer.Report 
